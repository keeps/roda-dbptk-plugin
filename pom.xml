<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<name>roda-plugin-dbptk</name>
	<groupId>com.databasepreservation</groupId>
	<version>1.0.0-SNAPSHOT</version>
	<artifactId>roda-plugin-dbptk</artifactId>
	<packaging>jar</packaging>

	<repositories>
		<repository>
			<id>KEEPS-Artifacts</id>
			<name>KEEP Artifacts-releases (fits, etc.)</name>
			<url>http://artifactory.keep.pt/keep</url>
		</repository>
	</repositories>

	<parent>
		<groupId>org.roda-project</groupId>
		<artifactId>roda</artifactId>
		<version>2.0.0-alpha15.5</version>
	</parent>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<build.date>${maven.build.timestamp}</build.date>
		<java_version>1.8</java_version>
		<testng.groups>all</testng.groups>
	</properties>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>${java_version}</source>
					<target>${java_version}</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<configuration>
					<archive>
						<manifest>
							<addDefaultImplementationEntries>true</addDefaultImplementationEntries>
							<addDefaultSpecificationEntries>true</addDefaultSpecificationEntries>
						</manifest>
						<manifestEntries>
							<RODA-Plugin>org.roda.core.plugins.dbptk.DatabaseVisualizationPlugin</RODA-Plugin>
						</manifestEntries>
					</archive>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<configuration>
					<useSystemClassLoader>true</useSystemClassLoader>
					<useManifestOnlyJar>false</useManifestOnlyJar>
					<suiteXmlFiles>
						<suiteXmlFile>testng.xml</suiteXmlFile>
					</suiteXmlFiles>
					<groups>${testng.groups}</groups>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<!-- dependency: RODA -->
		<dependency>
			<groupId>org.roda-project</groupId>
			<artifactId>roda-core</artifactId>
		</dependency>
		<dependency>
			<groupId>org.roda-project</groupId>
			<artifactId>roda-core-tests</artifactId>
			<scope>test</scope>
		</dependency>
		<!-- plugin-specific dependencies go here -->
	</dependencies>
</project>
